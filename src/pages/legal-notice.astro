---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Legal Notice';
const pageDescription = 'Legal notice and terms for the GBI Ventures Ltd website, hercules-merchandise.co.uk.';
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="page"
>
  <!-- Breadcrumb -->
  <section class="breadcrumb-section">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">
          <svg width="8" height="12" viewBox="0 0 8 12" fill="none">
            <path d="M1.5 1L6.5 6L1.5 11" stroke="#469ADC" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
        <span class="current">Legal Notice</span>
      </nav>
    </div>
  </section>

  <!-- Main Content -->
  <section class="page-section">
    <div class="container">
      <div class="content-wrapper">
        <h1>Legal Notice</h1>

        <div class="content-card">
          <div class="legal-section">
            <h2>1. Introduction</h2>
            <p>Welcome to the GBI Ventures Ltd website, https://www.hercules-merchandise.co.uk ("Site"). By using this Site, you agree to these terms and conditions ("Legal Notice"). If you do not agree, please refrain from using the Site and contact us for clarification.</p>
