---
import BaseLayout from '../../layouts/BaseLayout.astro';
import {
  siteConfig,
  getCollectionPageSchema,
  getBreadcrumbSchema
} from '../../config/seo';

const WORKER_URL = 'https://hercules-product-sync-uk.gilles-86d.workers.dev';

// Fetch all blog posts
let posts: any[] = [];
try {
  const res = await fetch(`${WORKER_URL}/posts`);
  if (res.ok) {
    posts = await res.json();
  }
} catch (error) {
  console.error('Error fetching posts:', error);
}

// Format date for display
function formatDate(dateStr: string) {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-GB', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// SEO configuration
const pageTitle = 'Blog';
const pageDescription = 'Discover the latest news, tips and insights about custom fan scarves, merchandise and more.';
const canonicalUrl = `${siteConfig.siteUrl}/blogs/`;

// Generate JSON-LD schemas
const jsonLdSchemas = [];

// CollectionPage schema for blog archive
jsonLdSchemas.push(getCollectionPageSchema({
  name: 'Blog',
  description: pageDescription,
  url: canonicalUrl
}));

// Breadcrumb schema
jsonLdSchemas.push(getBreadcrumbSchema([
  { name: 'Home', url: siteConfig.siteUrl },
  { name: 'Blog', url: canonicalUrl }
]));
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  pageType="blog"
  jsonLd={jsonLdSchemas}
>
  <!-- Breadcrumb -->
  <div class="breadcrumb-section">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span class="separator"><svg xmlns="http://www.w3.org/2000/svg" width="6" height="12" viewBox="0 0 6 12" fill="none"><path d="M6 6L0.75 11.1962L0.75 0.803848L6 6Z" fill="#469ADC"></path></svg></span>
        <span class="current">Blog</span>
      </nav>
    </div>
  </div>

  <!-- Page Header -->
  <section class="blog-header">
    <div class="container">
      <h1>BLOGS</h1>
    </div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="blog-posts">
    <div class="container">
      <div class="posts-grid">
        {posts.map((post) => (
          <article class="post-card">
            <a href={`/blogs/${post.slug}`} class="post-link">
              {post.featuredImage && (
                <div class="post-image">
                  <img
                    src={post.featuredImage}
                    alt={post.title}
                    loading="lazy"
                  />
                </div>
              )}
              <div class="post-content">
                <time class="post-date">{formatDate(post.date)}</time>
                <h2 class="post-title">{post.title}</h2>
                <p class="post-excerpt">{post.excerpt}</p>
                <span class="read-more">Read More</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .breadcrumb-section {
    background: #FAFAFA;
    padding: 20px 0;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0;
  }

  .breadcrumb {
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
    color: #5F5F5F;
  }

  .breadcrumb a {
    text-decoration: none;
    font-size: 14px;
  }

  .breadcrumb a:hover {
    color: #469ADC;
  }

  .breadcrumb .separator {
    display: inline-flex;
    align-items: center;
    margin: 0 10px;
  }

  .breadcrumb .separator svg {
    width: 6px;
    height: 12px;
  }

  .breadcrumb .current {
    color: #469ADC;
  }

  .blog-header {
    background: #FAFAFA;
    padding: 10px 0;
    text-align: center;
  }

  .blog-header h1 {
    font-family: 'Jost', sans-serif;
    font-size: 35px;
    font-weight: 600;
    color: #253461;
    text-transform: uppercase;
    margin: 0;
  }

  .blog-posts {
    padding: 60px 0;
    background: #FAFAFA;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .container {
      padding: 0 15px;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .blog-header h1 {
      font-size: 32px;
    }
  }

  .post-card {
    background: #fff;
    border: 1px solid #DCDCDC;
    border-radius: 20px;
    overflow: hidden;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .post-card:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transform: translateY(-5px);
  }

  .post-link {
    text-decoration: none;
    display: block;
  }

  .post-image {
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    background: #F2F2F2;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: 25px;
  }

  .post-date {
    font-family: 'Roboto', sans-serif;
    font-size: 13px;
    color: #469ADC;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: block;
    margin-bottom: 10px;
  }

  .post-title {
    font-family: 'Jost', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: #253461;
    margin: 0 0 15px;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-excerpt {
    font-family: 'Roboto', sans-serif;
    font-size: 15px;
    color: #5F5F5F;
    line-height: 1.6;
    margin: 0 0 20px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    font-family: 'Jost', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #469ADC;
    text-transform: uppercase;
    position: relative;
    display: inline-block;
  }

  .read-more::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #469ADC;
    transition: width 0.3s ease;
  }

  .post-card:hover .read-more::after {
    width: 100%;
  }
</style>
