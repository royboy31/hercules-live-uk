---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductSearch from '../components/ProductSearch';
---

<BaseLayout title="404 Fehler" description="Die angeforderte Seite wurde nicht gefunden.">
  <!-- Breadcrumbs -->
  <div class="breadcrumb-section">
    <div class="breadcrumb-container">
      <nav class="breadcrumb">
        <a href="/">Home</a>
        <span class="separator">
          <img src="/images/breadcrumb-separator.svg" alt="" width="7" height="12" />
        </span>
        <span class="current">404</span>
      </nav>
    </div>
  </div>

  <!-- 404 Content -->
  <section class="page-404">
    <h1 class="typing">404</h1>
    <p class="typing-text">Ups! Die Seite, die du suchst, existiert nichtâ€¦</p>
    <a href="/" class="back-home">Zur Startseite</a>

    <!-- Product Search -->
    <div class="search-wrapper">
      <ProductSearch client:idle />
    </div>
  </section>
</BaseLayout>

<style>
  /* Breadcrumb Section */
  .breadcrumb-section {
    background-color: #f9f9f9;
    padding: 20px 0 0 0;
  }

  .breadcrumb-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    font-family: 'Jost', sans-serif;
    font-size: 14px;
  }

  .breadcrumb a {
    color: #787878;
    text-decoration: none;
    transition: color 0.3s;
  }

  .breadcrumb a:hover {
    color: #00AEEF;
  }

  .separator {
    display: inline-flex;
    align-items: center;
    margin: 0 10px;
  }

  .separator img {
    width: 6px;
    height: 12px;
    aspect-ratio: 6 / 12;
  }

  .breadcrumb .current {
    color: #00AEEF;
  }

  /* 404 Page Container */
  .page-404 {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: #f9f9f9;
    padding: 60px 20px;
    min-height: 50vh;
    margin-bottom: 50px;
  }

  /* 404 Heading with Typing Animation */
  .typing {
    font-family: 'Jost', sans-serif;
    font-size: 8rem;
    font-weight: 600;
    color: #253461;
    border-right: 4px solid transparent;
    white-space: nowrap;
    overflow: hidden;
    margin: 0;
    animation:
      typing 4s steps(40, end) forwards,
      blink 0.7s step-end infinite,
      hideCursor 0.1s linear 4s forwards;
  }

  /* Typing Text */
  .typing-text {
    font-family: 'Jost', sans-serif;
    font-size: 35px;
    font-weight: 600;
    color: #5F5F5F;
    margin-top: 10px;
    border-right: 3px solid #5F5F5F;
    white-space: nowrap;
    overflow: hidden;
    animation: typing 3s steps(25, end) 2s forwards, blink 0.7s infinite;
  }

  /* Typing Keyframes */
  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  /* Blinking Cursor */
  @keyframes blink {
    50% { border-color: transparent }
  }

  @keyframes hideCursor {
    to { border-color: transparent; }
  }

  /* Back Home Button */
  .back-home {
    display: inline-block;
    background-color: #10C99E;
    font-family: 'Jost', sans-serif;
    font-size: 15px;
    font-weight: 500;
    text-transform: uppercase;
    color: #FFFFFF;
    text-decoration: none;
    border: 1px solid #10C99E;
    border-radius: 50px;
    padding: 10px 30px;
    margin-top: 20px;
    margin-bottom: 30px;
    transition: all 0.3s;
  }

  .back-home:hover {
    color: #10C99E;
    border-color: #10C99E;
    background: transparent;
  }

  /* Search Wrapper */
  .search-wrapper {
    width: 100%;
    max-width: 500px;
  }

  .search-wrapper :global(.product-search-container) {
    width: 100%;
  }

  .search-wrapper :global(.product-search-input) {
    width: 100%;
    height: 48px;
    padding: 12px 45px 12px 18px;
    font-size: 14px;
    border: 1px solid #DCDCDC;
    border-radius: 15px;
    font-family: 'Jost', sans-serif;
  }

  .search-wrapper :global(.product-search-input:focus) {
    border-color: #469ADC;
    outline: none;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .breadcrumb-section {
      padding: 15px 0 0 0;
    }

    .page-404 {
      padding: 40px 15px;
    }

    .typing {
      font-size: 35px;
    }

    .typing-text {
      font-size: 13px;
      font-weight: 500;
      white-space: normal;
      border-right: none;
      animation: none;
    }

    .back-home {
      font-size: 13px;
    }

    .search-wrapper {
      max-width: 100%;
      padding: 0 10px;
    }
  }
</style>
