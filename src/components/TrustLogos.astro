<section class="trust-section">
  <div class="trust-container">
    <h2 class="section-heading">They Trust Us</h2>

    <!-- Row 1: Left to Right (CSS animation) -->
    <div class="marquee-container">
      <div class="marquee-track marquee-ltr">
        {/* First set of logos */}
        {logosRow1.map((logo) => (
          <div class="logo-item">
            <figure class="logo-figure">
              <img src={logo.src} alt={logo.alt} loading="lazy" width="218" height="100" />
            </figure>
          </div>
        ))}
        {/* Duplicate for seamless loop */}
        {logosRow1.map((logo) => (
          <div class="logo-item" aria-hidden="true">
            <figure class="logo-figure">
              <img src={logo.src} alt="" loading="lazy" width="218" height="100" />
            </figure>
          </div>
        ))}
      </div>
    </div>

    <!-- Row 2: Right to Left (CSS animation) -->
    <div class="marquee-container">
      <div class="marquee-track marquee-rtl">
        {/* First set of logos */}
        {logosRow2.map((logo) => (
          <div class="logo-item">
            <figure class="logo-figure">
              <img src={logo.src} alt={logo.alt} loading="lazy" width="218" height="100" />
            </figure>
          </div>
        ))}
        {/* Duplicate for seamless loop */}
        {logosRow2.map((logo) => (
          <div class="logo-item" aria-hidden="true">
            <figure class="logo-figure">
              <img src={logo.src} alt="" loading="lazy" width="218" height="100" />
            </figure>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .trust-section {
    background-color: #F4F4F4;
    padding: 60px 0;
    margin-top: 50px;
    overflow: hidden;
    width: 100%;
  }

  .trust-container {
    width: 100%;
  }

  .section-heading {
    font-family: 'Jost', sans-serif;
    font-size: 35px;
    font-weight: 600;
    text-transform: uppercase;
    color: #253461;
    text-align: center;
    margin: 0 0 40px 0;
    padding: 0 20px;
  }

  /* Marquee container hides overflow */
  .marquee-container {
    width: 100%;
    overflow: hidden;
    padding: 10px 0;
  }

  /* Track contains logos and animates */
  .marquee-track {
    display: flex;
    width: max-content;
    gap: 20px;
  }

  /* Left to right animation */
  .marquee-ltr {
    animation: scroll-ltr 60s linear infinite;
  }

  /* Right to left animation */
  .marquee-rtl {
    animation: scroll-rtl 60s linear infinite;
  }

  @keyframes scroll-ltr {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scroll-rtl {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  /* Pause animation on hover */
  .marquee-container:hover .marquee-track {
    animation-play-state: paused;
  }

  .logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-figure {
    margin: 0;
    padding: 0;
    line-height: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-figure img {
    width: 218.13px;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .logo-figure img:hover {
    transform: scale(1.05);
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .logo-figure img {
      width: 180px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .section-heading {
      font-size: 28px;
    }

    .logo-figure img {
      width: 140px;
    }

    /* Faster animation on mobile for better UX */
    .marquee-ltr,
    .marquee-rtl {
      animation-duration: 40s;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .marquee-ltr,
    .marquee-rtl {
      animation: none;
    }
  }
</style>
