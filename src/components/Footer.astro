    visibility: visible;
  }

  .language-dropdown li a {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 7px 34px;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    color: #0056B3;
    text-decoration: none;
    transition: background 0.3s ease;
