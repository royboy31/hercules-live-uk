    display: flex;
    align-items: center;
  }

  .payment-icons img {
    max-width: 300px;
    height: auto;
  }

  .language-switcher {
    position: relative;
  }

  .language-current {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #ffffff;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    color: #0056B3;
    padding: 13px 34px;
    transition: all 0.3s ease;
