<style>
  .site-footer {
    width: 100%;
  }

  /* Newsletter Section */
  .newsletter-section {
    background-image: url('/images/footer-newsletter-bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 30px;
    margin: 0 auto;
    max-width: 1280px;
    position: relative;
    z-index: 2;
    height: auto;
    min-height: unset;
  }

  .newsletter-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.15);
    border-radius: 30px;
  }

  .newsletter-container {
    position: relative;
    padding: 100px 50px;
    height: auto;
  }

  .newsletter-content {
    max-width: 500px;
  }

  .newsletter-heading {
    font-family: 'Jost', sans-serif;
    font-size: 50px;
    font-weight: 600;
    text-transform: uppercase;
    color: #FFFFFF;
    margin: 0 0 20px 0;
  }

  .newsletter-form {
    margin-bottom: 15px;
  }

  .form-row {
    display: flex;
    gap: 10px;
  }

  .newsletter-input {
    flex: 1;
    padding: 12px 16px;
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    border: none;
    border-radius: 20px;
    background-color: #FFFFFF;
  }

  .newsletter-input::placeholder {
    color: #5F5F5F;
  }

  .newsletter-button {
    padding: 12px 24px;
    font-family: 'Jost', sans-serif;
    font-size: 15px;
    font-weight: 500;
    text-transform: uppercase;
    color: #FFFFFF;
    background-color: #10C99E;
    border: 1px solid #10C99E;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .newsletter-button:hover {
    background-color: transparent;
    color: #FFFFFF;
  }

  .newsletter-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .newsletter-message {
    margin-top: 10px;
    font-family: 'Roboto', sans-serif;
    font-size: 14px;
    display: none;
  }

  .newsletter-message.success {
    display: block;
    color: #10C99E;
  }

  .newsletter-message.error {
    display: block;
    color: #ff6b6b;
  }

  .newsletter-description {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 19px;
    color: #FFFFFF;
    margin: 0;
  }

  /* Main Footer */
  .main-footer {
    background-color: #E8F5FF;
    margin-top: -170px;
    padding: 250px 0 30px 0;
    position: relative;
    z-index: 1;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
  }

  .footer-column {
    flex: 1;
    min-width: 150px;
  }

  .logo-column {
    min-width: 200px;
    display: flex;
    align-items: center;
  }

  .footer-logo {
    max-width: 170px;
    height: auto;
  }

  .footer-heading {
    font-family: 'Jost', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-transform: uppercase;
    color: #253461;
    margin: 0 0 15px 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 8px;
  }

  .footer-links a {
    font-family: 'Roboto', sans-serif;
