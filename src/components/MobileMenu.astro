---
// Mobile slide-out menu with sliding submenus
// Menu data fetched from shared cache (single API call for all components)
import { getMenuData } from '../data/menu-data';

// Get menu data from shared cache (fetched once per build)
const menuData = await getMenuData();
const { sportarten, produkte, themen, directLinks } = menuData;

// Transform to mobile menu format
const mobileMenuItems = {
  sportarten: { title: 'Sportarten', items: sportarten },
  produkte: { title: 'Produkte', items: produkte },
  themen: { title: 'Themen', items: themen },
};
---

<!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="mobile-menu">
  <div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>

  <div class="mobile-menu-panel">
    <!-- Main Menu Panel -->
    <div class="menu-panel main-panel" id="main-panel">
      <!-- Header -->
      <div class="mobile-menu-header">
        <img
          src="/images/hercules-logo-original1.webp"
          alt="Hercules Merchandise"
          class="menu-logo"
          width="176"
          height="78"
        />
        <button id="mobile-menu-close" class="close-btn" aria-label="Menu schließen">
          <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Main Menu Items -->
      <div class="menu-content">
        {Object.entries(mobileMenuItems).map(([key, menu]) => (
          <button class="menu-item has-submenu" data-submenu={key}>
            <span class="menu-item-label">{menu.title}</span>
            <svg class="menu-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        ))}

        <!-- Direct Links (dynamic from API) -->
        {directLinks.map((link) => (
          <a href={link.href} class="menu-item">
            <span class="menu-item-label">{link.label}</span>
          </a>
        ))}

        <!-- Wishlist Link -->
        <a href="/wishlist/" class="menu-item wishlist-link">
          <span class="menu-item-label">
            <svg class="wishlist-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
            Wunschliste
          </span>
        </a>

        <!-- CTA Button -->
        <div class="menu-cta">
          <a href="/kontaktieren-sie-uns" class="cta-button">Kontakt</a>
        </div>
      </div>
    </div>

    <!-- Submenu Panels -->
    {Object.entries(mobileMenuItems).map(([key, menu]) => (
      <div class="menu-panel sub-panel" id={`submenu-${key}`} data-panel={key}>
        <!-- Submenu Header -->
        <div class="submenu-header">
          <button class="back-btn" data-back={key}>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span>Zurück</span>
          </button>
          <button class="close-btn submenu-close" aria-label="Menu schließen">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Submenu Title -->
        <div class="submenu-title">{menu.title}</div>

        <!-- Submenu Items -->
        <div class="submenu-content">
          {menu.items.map((item) => (
            <a href={item.href} class="submenu-item">
              {item.icon_url && <img src={item.icon_url} alt={`${item.label} Kategorie Icon`} class="submenu-icon" />}
              <span>{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
  }

  body.mobile-menu-open .mobile-menu {
    pointer-events: auto;
  }

  .mobile-menu-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s;
  }

  body.mobile-menu-open .mobile-menu-overlay {
    opacity: 1;
  }

  .mobile-menu-panel {
    position: absolute;
    top: 0;
    left: 0;
    width: 85%;
    max-width: 400px;
    height: 100%;
    background: white;
    transform: translateX(-100%);
    transition: transform 0.3s;
    overflow: hidden;
  }

  body.mobile-menu-open .mobile-menu-panel {
    transform: translateX(0);
  }

  /* Menu Panels */
  .menu-panel {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .main-panel {
    transform: translateX(0);
  }

  .main-panel.slide-out {
    transform: translateX(-100%);
  }

  .sub-panel {
    transform: translateX(100%);
  }

  .sub-panel.active {
    transform: translateX(0);
  }

  /* Header */
  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 20px;
    border-bottom: 1px solid #e5e7eb;
  }

  .menu-logo {
    height: 40px;
    width: auto;
  }

  .close-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    color: #253461;
    cursor: pointer;
  }

  .close-btn:hover {
    color: #469ADC;
  }

  /* Menu Content */
  .menu-content {
    flex: 1;
    overflow-y: auto;
    padding: 10px 0;
  }

  .menu-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 15px 20px;
    background: none;
    border: none;
    border-bottom: 1px solid #f0f0f0;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .menu-item:hover {
    background-color: #f9fafb;
  }

  .menu-item-label {
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    font-weight: 500;
    color: #253461;
    text-transform: uppercase;
  }

  .menu-arrow {
    color: #253461;
    flex-shrink: 0;
  }

  /* Wishlist Link */
  .wishlist-link .menu-item-label {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .wishlist-icon {
    color: #10C99E;
    flex-shrink: 0;
  }

  .wishlist-link:hover .wishlist-icon {
    fill: #10C99E;
  }

  /* CTA */
  .menu-cta {
    padding: 20px;
  }

  .cta-button {
    display: block;
    width: 100%;
    padding: 14px 20px;
    background: #10C99E;
    color: white;
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    border-radius: 50px;
    transition: background-color 0.2s;
  }

  .cta-button:hover {
    background: #0eb58d;
  }

  /* Submenu Header */
  .submenu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px 20px;
    border-bottom: 1px solid #e5e7eb;
  }

  .back-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    background: none;
    border: none;
    color: #253461;
    font-family: 'Jost', sans-serif;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    padding: 5px 0;
  }

  .back-btn:hover {
    color: #469ADC;
  }

  /* Submenu Title */
  .submenu-title {
    padding: 20px;
    font-family: 'Jost', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: #253461;
    text-transform: uppercase;
    border-bottom: 1px solid #e5e7eb;
  }

  /* Submenu Content */
  .submenu-content {
    flex: 1;
    overflow-y: auto;
    padding: 10px 0;
  }

  .submenu-item {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 12px 20px;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .submenu-item:hover {
    background-color: #f9fafb;
  }

  .submenu-icon {
    width: 24px;
    height: 24px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .submenu-item span {
    font-family: 'Jost', sans-serif;
    font-size: 15px;
    font-weight: 400;
    color: #253461;
  }

  .submenu-item:hover span {
    color: #469ADC;
  }
</style>

<script>
  // Mobile menu controls
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  const mainPanel = document.getElementById('main-panel');

  // Open menu
  mobileMenuToggle?.addEventListener('click', () => {
    document.body.classList.add('mobile-menu-open');
  });

  // Close menu function
  function closeMenu() {
    document.body.classList.remove('mobile-menu-open');
    // Reset panels after animation
    setTimeout(() => {
      mainPanel?.classList.remove('slide-out');
      document.querySelectorAll('.sub-panel').forEach(panel => {
        panel.classList.remove('active');
      });
    }, 300);
  }

  // Close menu buttons
  mobileMenuClose?.addEventListener('click', closeMenu);
  mobileMenuOverlay?.addEventListener('click', closeMenu);

  // All close buttons in submenus
  document.querySelectorAll('.submenu-close').forEach(btn => {
    btn.addEventListener('click', closeMenu);
  });

  // Open submenu
  document.querySelectorAll('.has-submenu').forEach(btn => {
    btn.addEventListener('click', () => {
      const submenuId = btn.getAttribute('data-submenu');
      const submenu = document.getElementById(`submenu-${submenuId}`);

      mainPanel?.classList.add('slide-out');
      submenu?.classList.add('active');
    });
  });

  // Back button
  document.querySelectorAll('.back-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const panelId = btn.getAttribute('data-back');
      const submenu = document.getElementById(`submenu-${panelId}`);

      mainPanel?.classList.remove('slide-out');
      submenu?.classList.remove('active');
    });
  });

  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeMenu();
    }
  });
</script>
