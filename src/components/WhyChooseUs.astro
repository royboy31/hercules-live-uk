<style>
  .why-choose-section {
    width: 100%;
    padding: 25px 0 70px 0;
    background: #ffffff;
  }

  .why-choose-container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 15px;
  }

  /* Section Heading */
  .section-heading {
    font-family: 'Jost', sans-serif;
    font-size: 35px;
    font-weight: 600;
    text-transform: uppercase;
    text-align: center;
    color: #253461;
    margin: 0 0 50px 0;
  }

  .section-heading .highlight {
    color: #469ADC;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  /* Feature Box */
  .feature-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .feature-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
  }

  .feature-icon svg {
    width: 100%;
    height: auto;
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .feature-title {
    font-family: 'Jost', sans-serif;
    font-size: 25px;
    font-weight: 600;
    color: #253461;
    margin: 0 0 10px 0;
  }

  .feature-description {
    font-family: 'Jost', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: #5F5F5F;
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .section-heading {
      font-size: 28px;
    }

    .feature-title {
      font-size: 22px;
    }

    .feature-description {
      font-size: 15px;
    }
  }

  @media (max-width: 768px) {
    .why-choose-section {
      padding: 0 0 40px 0;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .section-heading {
      font-size: 24px;
      margin-bottom: 25px;
    }

    .feature-box {
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>
